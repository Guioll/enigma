<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Enigma{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('images/favicon.png') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <h1>
        Simulateur de machine Enigma
    </h1>
    <nav>
        <a href="{{ url('main') }}">Accueil</a>
        <a href="{{ url('traiter') }}">Traiter un message</a>
    </nav>
    <main>
        <div>
        {% block body %}{% endblock %}
        </div>
    </main>
    </body>
</html>
